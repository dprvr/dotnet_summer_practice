@model FilesStorage.Entities.ViewModels.FilesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Files</h2>

<p>
    @Html.ActionLink("Add", "Add")
</p>

@using (Html.BeginForm("Index", "MyFiles", FormMethod.Post))
{
    <div>
        @Html.TextBoxFor(m => m.SearchString, "")
        <input type="submit" value="Search" />
    </div>

    if(ViewBag.ErrorMessage != null)
    {
        <script type="text/javascript">
    window.onload = function () {
        this.alert("@ViewBag.ErrorMessage");
    };
    </script>
    }
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.filesViews)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.filesViews)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
